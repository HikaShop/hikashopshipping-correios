<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="2.5" method="upgrade" group="hikashopshipping">
	<name>Hikashop Correios Shipping Plugin</name>
	<creationDate>October 2013</creationDate>
	<version>1.0.0</version>
	<author>Jobadoo Webdesign</author>
	<authorEmail>contato@jobadoo.com.br</authorEmail>
	<authorUrl>http://www.jobadoo.com.br</authorUrl>
	<copyright>Copyright (C) 2013 Jobadoo Webdesign - All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin enables you to setup handle Correios service</description>
	<files>
		<filename plugin="correios">correios.php</filename>
		<filename>correios_configuration.php</filename>
		<folder>images</folder>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
            </fieldset>
		</fields>
	</config>
</extension>